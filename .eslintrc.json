{
  "extends": ["airbnb-base", "plugin:n/recommended", "plugin:unicorn/recommended"],
  "plugins": ["n", "unicorn"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "unicorn/prevent-abbreviations": 0,
    "unicorn/no-null": 0,
    "unicorn/catch-error-name": ["error", { "name": "e" }]
  },
  "overrides": [
    {
      "files": ["test/{,**/}*.js"],
      "extends": ["plugin:mocha/recommended"],
      "plugins": ["mocha"],
      "env": {
        "mocha": true
      },
      "rules": {
        "mocha/no-mocha-arrows": 0
      }
    }
  ]
}
